{
    "tasks": [
        {
            "type": "shell",
            "label": "Launch QEMU debug",
            "command": "make",
            "args": [
                "run_debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "build",
            "command": "make",
            "args": [
                "all",
                "-j12"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}